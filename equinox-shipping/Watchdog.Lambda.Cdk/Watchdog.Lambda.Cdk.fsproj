        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>

        <OutputType>Exe</OutputType>
        <!-- Opt into Roll forward to future major versions as needed -->
        <RollForward>Major</RollForward>
    </PropertyGroup>

    <ItemGroup>
        <Compile Include="WatchdogLambdaStack.fs" />
