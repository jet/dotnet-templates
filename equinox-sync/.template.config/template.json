{
  "$schema": "http://json.schemastore.org/template",
  "author": "@jet @bartelink",
  "classifications": [
    "Equinox",
    "Event Sourcing",
    "EventStore",
    "CosmosDb",
    "ChangeFeed"
  ],
  "tags": {
    "language": "F#"
  },
  "identity": "Equinox.Template.Sync",
  "name": "Equinox Store Sync System",
  "shortName": "eqxsync",
  "sourceName": "SyncTemplate",
  "preferNameDirectory": true,

  "symbols": {
    "eventstore": {
      "type": "parameter",
      "datatype": "bool",
      "isRequired": false,
      "defaultValue": "false",
      "description": "Use EventStore as a source; default: use a CosmosDb ChangeFeedProcessor as the source."
    },
    "marveleqx": {
      "type": "parameter",
      "datatype": "bool",
      "isRequired": false,
      "defaultValue": "false",
      "description": "Include example code to transform from the Equinox V0 (internal) schema to that of `Equinox.Cosmos`"
    }
  }
}