{
  "$schema": "http://json.schemastore.org/template",
  "author": "@jet @bartelink",
  "classifications": [
    "CosmosDb",
    "ChangeFeed",
    "ChangeFeedProcessor",
    "Event Sourcing",
    "Equinox",
    "EventStore",
    "Kafka",
    "Propulsion",
    "Reactor"
  ],
  "tags": {
    "language": "F#"
  },
  "identity": "Propulsion.Template.Reactor",
  "name": "Propulsion EventStore/Cosmos Reactor",
  "shortName": "proReactor",
  "sourceName": "ReactorTemplate",
  "preferNameDirectory": true,
  "symbols": {
    "noEventStore": {
      "type": "parameter",
      "datatype": "bool",
      "isRequired": false,
      "defaultValue": "false",
      "description": "Disable projecting from EventStore."
    },
    "blank": {
      "type": "parameter",
      "datatype": "bool",
      "isRequired": false,
      "defaultValue": "false",
      "description": "Remove Ingestion sample code. (Not applicable if --kafka selected)"
    },
    "kafka": {
      "type": "parameter",
      "datatype": "bool",
      "isRequired": false,
      "defaultValue": "false",
      "description": "Include code projecting to Kafka."
    },
    "raw": {
      "type": "parameter",
      "datatype": "bool",
      "isRequired": false,
      "defaultValue": "false",
      "description": "Emit raw stream jevents directly, rather than producing a versioned summary. (Only applicable if --kafka selected)"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(kafka && raw) || blank",
          "exclude": [
            "Infrastructure.fs",
            "Todo.fs",
            "Contract.fs",
          ]
        },
        {
          "condition": "kafka",
          "exclude": [
            "TodoSummary.fs"
          ]
        },
        {
          "condition": "kafka",
          "exclude": [
            "Ingester.fs"
          ]
        },
        {
          "condition": "noEventStore && !kafka",
          "exclude": [
            "Handler.fs"
          ]
        }
      ]
    }
  ]
}