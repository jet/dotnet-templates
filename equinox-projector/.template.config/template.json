{
  "$schema": "http://json.schemastore.org/template",
  "author": "@jet @bartelink",
  "classifications": [
    "Equinox",
    "Event Sourcing",
    "CosmosDb",
    "ChangeFeed",
    "Kafka"
  ],
  "tags": {
    "language": "F#"
  },
  "identity": "Equinox.Template.Projector",
  "name": "Equinox Projector (with optional consumer)",
  "shortName": "eqxprojector",
  "sourceName": "ProjectorTemplate",
  "preferNameDirectory": true,

  "symbols": {
    "kafka": {
      "type": "parameter",
      "datatype": "bool",
      "isRequired": false,
      "defaultValue": "false",
      "description": "Include a code projecting to, and consuming from Kafka."
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!kafka)",
          "exclude": [
            "**/Consumer/**/*",
            "**/Projector/KafkaSink.fs",
            "equinox-projector-consumer.sln"
          ]
        },
        {
          "condition": "(kafka)",
          "exclude": [
            "equinox-projector.sln"
          ]
        }
      ]
    }
  ]
}